<h1>Server Info: <%= process.env.NAME %></h1>

<div class="container">
  <div class="well">
      <ul class="list-group">
          <li class="list-group-item"><strong>Server Machine Name:</strong> <%= process.env.NAME %></li>
          <li class="list-group-item"><strong>Server IP:</strong> <%= req.headers["host"] %></li>
          <li class="list-group-item">
              <strong>Cookies:</strong>
              <ul>
                  <% for(var i=0; i<req.cookies.length; i++) { %>
                      <li>
                        <%= req.cookies[i] %>
                      </li>
                  <% } %>
              </ul>
          </li>
        </ul>
  </div>

  <div class="alert-info">This page will refresh every 2 seconds.</div>
</div>


<script>
  setTimeout(function () {
      document.location = window.location.href.split('?')[0] + "?t=" + new Date().getTime();
  }, 2000);
</script>